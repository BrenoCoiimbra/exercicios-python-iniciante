real = float(input('Quanto de dinheiro voce tem na carteira??'))
dolar = real / 4.87
print('Com R$ {} voce pode compra U${}'.format(real,dolar))

larg = float(input('Largura da parade :'))
alt = float(input('Altura da parede'))
area = larg * alt
print('Sua parede tem a dimensao de {} x {} e sua area e de {}m2'.format(larg,alt,area))
tinta = area / 2
print('Para pintar essa parede, voce vai precisar de {} de tinta'.format(tinta))


# coding=utf-8
preco = float(input('Qual e o preço do produto?R$ '))
novo = preco - (preco * 5 / 100)
print('o produto que custava {},na promocao com desconto de 5% vai custar R$ {}'.format(preco, novo))


salario = float(input('Qual e o salario do Funcionario? R$'))
novo = salario + (salario * 15 / 100)
print('Um funcionario que ganhava R$ {} com 15% de aumento, passa a receber R${}'.format(salario,novo))


c = float(input('Informe a temperatura em C:'))
f = ((9*c)/5)+32
print('a temperatura de {} C corresponde a {} F!'.format(c,f))


